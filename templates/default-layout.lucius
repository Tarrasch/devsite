body {
  text-align: justify;
  margin-top: 10px;
}
blockquote p { /* bootstrap makes this look bad */
  text-align:  inherit;
  font-size:   inherit;
  line-height: inherit;
  font-weight: inherit;
}
pre, code, kbd, samp { 
  font-family: 'Droid Sans Mono', 'Lucida Console', Monaco, monospace, sans-serif;
}
pre {
  color:            #ccc;
  background-color: #303030;
}
code, kbd, samp {
  padding:          0;
  border:           none;
  color:            inherit;
  background-color: inherit;
}
footer {
  clear:       both;
  height:      250px;
  margin-top:  10px;
  padding-top: 5px;
  border-top:  1px solid #e5e5e5;
}
footer p,
footer ul {
  color:     #aaa;
  font-size: 80%;
}
footer p {
  margin-top: 10px;
  text-align: center;
}
footer ul {
  list-style:  none;
  text-align:  left;
  margin-left: 0;
}
h1 > a, h2 > a, h3 > a,
h4 > a, h5 > a, h6 > a {
  color: inherit
}
form label {
  font-weight: bold;
  margin:  0;
  padding: 0;
}
form .help-block {
  display: block;
  clear: both;
  margin-top: -5px;
  margin-bottom: 15px;
}
.login-controls {
  float: right
}
.login-controls img {
  height: 20px;
  width:  20px;
  padding-right: 3px;
  vertical-align: middle;
}
.login-controls > .dropdown > a {
  text-align: center;
  vertical-align: middle;
}
.note,
.update {
  background: #f1f1f1;
  border:  1px solid #e5e5e5;
  margin:  20px 0;
  padding: 20px;
  padding-bottom: 11px;

  -webkit-border-radius: 3px;
     -moz-border-radius: 3px;
          border-radius: 3px;
}
.image img {
  margin: 5px;
  margin-bottom: 25px;

  max-width: 800px;

  -webkit-box-shadow: 2px 12px 20px #888;
     -moz-box-shadow: 2px 12px 20px #888;
          box-shadow: 2px 12px 20px #888;
}
.hover { cursor: pointer; }
.right { float: right;   }

/* comments  {{{ */
.yesod_comments {
  width: 60%;
  margin: 20px;
  margin-top: 10px;
}
.yesod_comments .avatar {
  float:   left;
  height:  48px;
  width:   48px;
  padding: 5px;
}
.yesod_comments .attribution .avatar {
  float:   none;
  padding: 0;
  height:  20px;
  width:   20px;

  margin-right: 5px;
  vertical-align: middle;
}
.yesod_comments .comment,
.yesod_comments > .input {
  padding: 5px 10px;
  margin:  10px 0;
  border: solid 1px #ccc;
}
.yesod_comments > .input {
  padding-left: 65px;
}
.yesod_comments > .input textarea {
  height: 80px;
  width: 85%;
}
.yesod_comments .thread {
  margin: 0;
  width: 100%;
  margin-bottom: 20px;
}
/* }}} */

/* syntax highlighting {{{ */
pre.sourceCode span.kw { color: #f0dfaf; }
pre.sourceCode span.dt { color: #dfdfbf; }
pre.sourceCode span.dv { color: #dcdccc; }
pre.sourceCode span.bn { color: #dca3a3; }
pre.sourceCode span.fl { color: #c0bed1; }
pre.sourceCode span.ch { color: #dca3a3; }
pre.sourceCode span.st { color: #cc9393; }
pre.sourceCode span.co { color: #7f9f7f; }
pre.sourceCode span.ot { color: #efef8f; }
pre.sourceCode span.al { color: #ffcfaf; }
pre.sourceCode span.fu { color: #efef8f; }
pre.sourceCode span.re { color: #ffd7a7; }
pre.sourceCode span.er { color: #c3bf9f; }
/* }}} */
